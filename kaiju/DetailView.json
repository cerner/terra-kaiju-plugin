{
  "name": "DetailView",
  "library": "terra-clinical-detail-view",
  "display": "Detail View",
  "description": "Displays text at different levels of importance",
  "group": "Templates::DetailView",
  "documentation": "http://engineering.cerner.com/terra-ui/#/site/components/clinical/site/detail-view/index",
  "properties": {
    "title": {
      "type": "String",
      "default": "Title"
    },
    "footer": {
      "type": "String",
      "default": "Footer"
    },
    "isDivided": {
      "type": "Bool",
      "default": true,
      "display": "Divided"
    },
    "details": {
      "type": "Array",
      "schema": {
        "type": "Component"
      }
    },
    "subtitles": {
      "type": "Array",
      "schema": {
        "type": "String"
      }
    }
  }
}
