{
  "name": "DetailView",
  "library": "terra-clinical-detail-view",
  "display": "Detail View",
  "description": "Displays text at different levels of importance",
  "group": "Templates::DetailView",
  "documentation": "http://engineering.cerner.com/terra-ui/#/site/components/clinical/site/detail-view/index",
  "properties": {
    "title": {
      "type": "String",
      "default": "Title"
    },
    "footer": {
      "type": "String",
      "default": "Footer"
    },
    "isDivided": {
      "type": "Bool",
      "default": true,
      "display": "Divided"
    },
    "details": {
      "type": "Array",
      "schema": {
        "type": "Component"
      },
      "default": [
        {
          "type": "terra-clinical-detail-view::DetailList",
          "props": {
            "children": [
              {
                "type": "terra-clinical-detail-view::DetailListItem",
                "props": {
                  "item": {
                    "type": "terra-clinical-label-value-view::LabelValueView",
                    "props": {
                      "label": "Age",
                      "textValue": "38 Years"
                    }
                  }
                }
              },
              {
                "type": "terra-clinical-detail-view::DetailListItem",
                "props": {
                  "item": {
                    "type": "terra-clinical-label-value-view::LabelValueView",
                    "props": {
                      "label": "Height",
                      "textValue": "182.88 cm"
                    }
                  }
                }
              },
              {
                "type": "terra-clinical-detail-view::DetailListItem",
                "props": {
                  "item": {
                    "type": "terra-clinical-label-value-view::LabelValueView",
                    "props": {
                      "label": "Eye color",
                      "textValue": "Brown"
                    }
                  }
                }
              },
              {
                "type": "terra-clinical-detail-view::DetailListItem",
                "props": {
                  "item": {
                    "type": "terra-clinical-label-value-view::LabelValueView",
                    "props": {
                      "label": "Blood Pressure",
                      "textValue": "120/80"
                    }
                  }
                }
              }
            ]
          }
        }
      ]
    },
    "subtitles": {
      "type": "Array",
      "schema": {
        "type": "String"
      }
    }
  }
}
