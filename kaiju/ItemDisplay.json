{
  "name": "ItemDisplay",
  "library": "terra-clinical-item-display",
  "display": "Item Display",
  "description": "The Item Display component creates an display for text and an optional graphic. The Comment subcomponent creates a display for text with a comment icon.",
  "group": "Molecules::Item View",
  "documentation": "http://engineering.cerner.com/terra-ui/#/components/terra-clinical-item-display/clinical-item-display",
  "properties": {
    "isDisabled": {
      "type": "Bool",
      "display": "Disabled"
    },
    "isTruncated": {
      "type": "Bool",
      "display": "Truncated"
    },
    "textStyle": {
      "type": "String",
      "form_type": "CodifiedList",
      "default": "",
      "options": [
        {
          "display": "default",
          "value": "",
          "type": "String"
        },
        {
          "display": "Secondary",
          "value": "secondary",
          "type": "String"
        },
        {
          "display": "Attention",
          "value": "attention",
          "type": "String"
        },
        {
          "display": "StrikeThrough",
          "value": "strikeThrough",
          "type": "String"
        },
        {
          "display": "Strong",
          "value": "strong",
          "type": "String"
        }
      ]
    },
    "text": {
      "type": "String",
      "default": "Text"
    },
    "icon": {
      "type": "Component",
      "drop_zone": false
    },
    "iconAlignment": {
      "type": "String",
      "display": "Icon alignment",
      "default": "center",
      "form_type": "CodifiedList",
      "options": [
        {
          "display": "Center",
          "value": "center",
          "type": "String"
        },
        {
          "display": "Top",
          "value": "top",
          "type": "String"
        },
        {
          "display": "Inline",
          "value": "inline",
          "type": "String"
        }
      ]
    }
  }
}
