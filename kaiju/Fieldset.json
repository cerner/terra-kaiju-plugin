{
  "name": "Fieldset",
  "library": "terra-form-fieldset",
  "display": "Fieldset",
  "description": "Generic form fieldset component which handles the layout of a standard form fieldset including help text, legend, value and widget placement.",
  "group": "Atoms::Forms",
  "documentation": "http://engineering.cerner.com/terra-ui/#/components/terra-form-fieldset/form-fieldset/form-fieldset",
  "properties": {
    "required": {
      "type": "Bool"
    },
    "legend": {
      "type": "String",
      "default": "Legend"
    },
    "help": {
      "type": "Array",
      "schema": {
        "type": "Component",
        "drop_zone": false
      }
    },
    "children": {
      "type": "Array",
      "schema": {
        "type": "Component"
      }
    },
    "isLegendHidden": {
      "type": "Bool",
      "display": "Legend hidden"
    }
  }
}
