{
  "name": "Avatar",
  "library": "terra-avatar",
  "display": "Avatar",
  "description": "The terra-avatar component displays an avatar, which can be either an image or text, in a circular frame. If neither an image or text is provided, a variant-based fallback icon is used.",
  "group": "Atoms::Other",
  "documentation": "http://engineering.cerner.com/terra-ui/#/components/terra-avatar/avatar",
  "properties": {
    "alt": {
      "type": "String"
    },
    "ariaLabel": {
      "type": "String"
    },
    "image": {
      "type": "String"
    },
    "initials": {
      "type": "String"
    },
    "variant": {
      "type": "String",
      "form_type": "CodifiedList",
      "default": "user",
      "options": [
        {
          "display": "User",
          "value": "user",
          "type": "String"
        },
        {
          "display": "Facility",
          "value": "facility",
          "type": "String"
        }
