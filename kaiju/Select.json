      },
      "default": [
        {
          "type": "terra-form-select::Option",
          "props": {
            "display": "Apple",
            "value": "apple"
          }
        },
        {
          "type": "terra-form-select::Option",
          "props": {
            "display": "Pear",
            "value": "pear"
          }
        },
        {
          "type": "terra-form-select::Option",
          "props": {
            "display": "Orange",
            "value": "orange"
          }
        }
      ]
    }
  }
