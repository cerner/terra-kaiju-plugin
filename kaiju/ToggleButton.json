{
  "name": "ToggleButton",
  "library": "terra-toggle-button",
  "display": "Toggle Button",
  "description": "A disclosure mechanism for showing and hiding content in an animated fashion by interacting with a Button",
  "group": "Molecules::Other",
  "properties": {
    "isInitiallyOpen": {
      "type": "Bool",
      "default": true,
      "display": "Initially open"
    },
    "isAnimated": {
      "type": "Bool",
      "display": "Animated"
    },
    "isIconAnimated": {
      "type": "Bool",
      "display": "Animated icon"
    },
    "isIconOnly": {
      "type": "Bool",
      "display": "Icon only"
    },
    "closedButtonText": {
      "type": "String",
      "default": "Open"
    },
    "openedButtonText": {
      "type": "String",
      "default": "Close"
    },
    "children": {
      "type": "Array",
      "schema": {
        "type": "Component"
      }
    }
  }
}
