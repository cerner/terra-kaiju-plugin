    "inputId": {
      "type": "String",
      "display": "Input id"
    },
    "error": {
      "type": "Array",
      "display": "Error",
      "schema": {
        "type": "Component"
      }
    },
    "errorIcon": {
      "type": "Component",
      "display": "Error icon"
    },
    "help": {
      "type": "Array",
      "display": "Help",
      "schema": {
        "type": "Component"
      }
    },
    "maxWidth": {
      "type": "String",
      "display": "Max width"
    },
    "type": {
      "type": "String",
      "display": "Type"
    }
  },
  "import_from": "terra-form-input/lib/InputField"
}
