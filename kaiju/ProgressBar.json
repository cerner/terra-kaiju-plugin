{
  "name": "ProgressBar",
  "library": "terra-progress-bar",
  "display": "Progress Bar",
  "description": "The progress bar component provides users a way to display the progress of process or activity in a graphical manner.",
  "group": "Atoms::Other",
  "documentation": "http://engineering.cerner.com/terra-ui/#/components/terra-progress-bar/progress-bar",
  "properties": {
    "hasGradient": {
      "type": "Bool",
      "display": "Has gradient"
    },
    "color": {
      "type": "String"
    },
    "max": {
      "type": "Number",
      "default": 100
    },
    "value": {
      "type": "Number",
      "default": 20
    },
    "heightSize": {
      "type": "String",
      "display": "Height size",
      "default": "small",
      "form_type": "CodifiedList",
      "options": [
        {
          "display": "Tiny",
          "value": "tiny",
          "type": "String"
        },
        {
          "display": "Small",
          "value": "small",
          "type": "String"
        },
        {
          "display": "Medium",
          "value": "medium",
          "type": "String"
        },
        {
          "display": "Large",
          "value": "large",
          "type": "String"
        },
        {
          "display": "Huge",
          "value": "huge",
          "type": "String"
        }
      ]
    }
  }
}
